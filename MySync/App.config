<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<configSections>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
	</configSections>

	<startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
    </startup>

	<appSettings>
		<add key="Primary" value="\\MyBookLiveDuo\Public"/>
		<add key="Secondary" value="\\WDMyCloudEX2\Public"/>
		<add key="SkippingTill" value=""/>
		<add key="ReportOnly" value="No"/>
		<add key="Console.BufferWidth" value="650"/>
		<add key="Console.BufferHeight" value="900"/>

		<!-- Logger service locator class -->
		<add key="logger" value="MySync.LogService.LogAdapter"/>

		<!-- semicolon separated values.  No space between values-->
		<add key="ExcludeFiles" value="Thumbs.db"/>

		<!-- semicolon separated values.  No space between values-->
		<add key="ExcludeDirectoriesStartingWith" value=".;_"/>
	</appSettings>

	<log4net>
		<appender name="Console" type="log4net.Appender.ConsoleAppender">
			<layout type="log4net.Layout.PatternLayout">
				<!-- Pattern to output the caller's file name and line number -->
				<conversionPattern value="%5level - %message%newline" />
			</layout>
		</appender>
		<appender name="AppRollingFile" type="log4net.Appender.RollingFileAppender">
			<file type="log4net.Util.PatternString" value="C:\Logs\MySync\MySync.%date{yyyyMMdd}.log" />
			<lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
			<appendToFile value="true" />
			<rollingStyle value="Composite"/>
			<maximumFileSize value="3MB" />
			<maxSizeRollBackups value="15" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%-5level	[%thread]	(%file:%line)	[%d{yyyy-MM-dd HH:mm:ss.fff}]	%message%newline" />
			</layout>
		</appender>
		<root>
			<level value="ALL" />
			<appender-ref ref="Console" />
			<appender-ref ref="AppRollingFile" />
		</root>
	</log4net>
</configuration>